<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="controllers.ShowroomController" prefHeight="948.0" prefWidth="1077.0" stylesheets="@styles/showroom.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="logoImageView" fitWidth="50" fitHeight="50"/>

            <TextField HBox.hgrow="ALWAYS" promptText="Search...">
                <HBox.margin>
                    <Insets left="10" right="10"/>
                </HBox.margin>
            </TextField>
            <!-- Buttons on the top right -->
            <HBox spacing="5" alignment="CENTER_RIGHT">
                <Button fx:id="signupButton" onAction="#handleSignup" text="Sign Up"/>
                <Button fx:id="signinButton" onAction="#handleSignin" text="Sign In"/>
            </HBox>
        </HBox>
    </top>

</BorderPane>
