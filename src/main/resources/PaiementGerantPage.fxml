<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.PaiementGerantController" spacing="20" alignment="CENTER">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    <Button fx:id="backButton" onAction="#handleBackAction" styleClass="back-button">
        <graphic>
            <StackPane>
                <Circle fill="#0078d7" radius="15"/>
                <Text text="&lt;" fill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
            </StackPane>
        </graphic>
    </Button>
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Text text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="cardNumberField" GridPane.columnIndex="1" GridPane.rowIndex="0" minWidth="250"/>
        <Label fx:id="cardNumberError" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2"/>

        <Text text="Expiration Date (MM/YY):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="expDateField" GridPane.columnIndex="1" GridPane.rowIndex="2" minWidth="250"/>
        <Label fx:id="expDateError" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"/>

        <Text text="CVC:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="cvcField" GridPane.columnIndex="1" GridPane.rowIndex="4" minWidth="250"/>
        <Label fx:id="cvcError" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
    </GridPane>
    <Button fx:id="payButton" text="Pay" onAction="#handlePayment"  maxWidth="Infinity" VBox.vgrow="ALWAYS" disable="true"/>
</VBox>
